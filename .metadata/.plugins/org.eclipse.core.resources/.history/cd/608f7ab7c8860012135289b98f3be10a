package villa.game.room;

import java.util.ArrayList;
import java.util.HashSet;
import java.util.Iterator;

import villa.game.object.GameObject;

public class ObjectsHolder
{
	private ArrayList<GameObject> objects = new ArrayList<GameObject>();
	private HashSet<GameObject> add = new HashSet<GameObject>();
	
	/* Object Management */
	/**
	 * Adds an object to the holder.
	 * 
	 * @param obj the object to add
	 */
	public void add_object(GameObject obj)
	{
		this.add.add(obj);
	}//END add_obj

	/**
	 * Adds the objects from the spawn list to the main list.
	 */
	private void add()
	{
		Iterator<GameObject> iter = this.add.iterator();
		while(iter.hasNext())
		{
			GameObject obj = iter.next();
			this.objects.add(obj);
			iter.remove();
		}//elihw
	}//END add
	
	/* Update */
}
